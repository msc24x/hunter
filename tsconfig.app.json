/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [
      "node"
    ],
    "target": "ES2022",
    "module": "es2020",
    "lib": [
      "es5",
      "es6",
      "dom",
      "scripthost",
      "dom.iterable",
      "es2020",
      "es2022"
    ],
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@assets/*": [
        "assests/*"
      ]
    },
    "strict": true
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}